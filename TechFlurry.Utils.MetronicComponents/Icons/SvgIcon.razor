    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public ThemeColors? Color { get; set; }
    [Parameter]
    public IconSizes? Size { get; set; }
    [Parameter]
    public string CssClass { get; set; }
    string css;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        StringBuilder cssBuilder = new();
        cssBuilder.Append("svg-icon");
        if (Color is not null)
        {
            cssBuilder.Append($" svg-icon-{Color?.ToString().ToLower()}");
        }
        if (Size is not null)
        {
            cssBuilder.Append($" svg-icon-{Size?.ToString().ToLower().TrimStart('_')}");
        }
        cssBuilder.Append($" {CssClass}");
        css = cssBuilder.ToString();
    }
